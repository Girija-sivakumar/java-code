import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scan=new Scanner(System.in);
        int n=scan.nextInt();
        int sum=0;
        int res=0;
        if(n<0){
            n=n*(-1);
        }
        while(n!=0){
            res=n%10;
            sum=sum+res;
            n=n/10;
        }
        System.out.println(sum);
       }
}
